{
  "name": "Dark GitHub",
  "version": "0.1",
  "description": "Switch the GitHub to dark mode.",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [ "https://*.github.com/*" ],
      "css": [
        "css/global/master.css",
        "css/global/header.css",
        "css/global/btn.css"
      ]
    },
    {
      "matches": [ "https://github.com/" ],
      "css": [ "css/index/dashboard.css" ]
    }
  ]
}
